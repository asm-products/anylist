.row{ 'ng-repeat' => 'group in lists track by $index', 'ng-if' => '$index % 3 == 0' }
  .col-4{ 'ng-repeat' => '$i in [$index, $index+1, $index+2]' }
    .list
      .title
        {{ lists[$i].title }}
      .info
        %a{ 'ng-href' => '#/lists/{{ lists[$i].id }}/edit' }
          %i.fa.fa-cog
          Изменить
        %span
          %i.fa.fa-user
          {{ lists[$i].user.email }}
      .item{ 'ng-repeat' => 'item in lists[$i].items_attributes' }
        {{ item.title }}
        