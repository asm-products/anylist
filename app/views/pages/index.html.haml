!!!
%html{ 'ng-app' => 'anylistApp' }
  %head
    %title
      Anylist
    %script{ :src => '//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js' }
    %script{ :src => '//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js' }
    %script{ :src => '//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js' }
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application', media: 'all'
  %body{ 'ng-controller' => 'applicationController' }
    %nav{ 'ng-include' => "'#{ asset_path('partials/nav.html') }'", 'ng-controller' => 'navController' }
    %header{ 'ng-include' => "'#{ asset_path('partials/header.html') }'", 'ng-controller' => 'headerController', 'ng-class' => "{ big: showHeader }" }
    .container.wrap
      %div{ 'ng-view' => '' }
    %footer{ 'ng-include' => "'#{ asset_path('partials/footer.html') }'" }
    %loading
      %i.fa.fa-refresh.fa-spin
